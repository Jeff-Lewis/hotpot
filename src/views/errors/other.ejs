<!DOCTYPE html>
<html>
    <head>
        <% include ../partials/header %>
    </head>
    <body class="texture">
        <div id="cl-wrapper" class="error-container">
            <div class="hidden-xs" style="height: 60px;">
                &nbsp;
            </div>
            <div class="page-error" style="padding: 10px; margin-top: 20px; margin-bottom: 10px;">
                <div class="hidden-xs">
                    <h1 class="number text-center"><%= res.statusCode %></h1>
                    <h2 class="description text-center">Sorry, we messed up.</h2>
                </div>
                <div class="visible-xs">
                    <h1 class="number text-center"><%= res.statusCode %></h1>
                    <h5 class="color-white text-center">Sorry, we messed up.</h5>
                </div>
                
                <div class="col-md-6 col-md-offset-3 text-error" style="margin-top: 50px;">
                    <% if (typeof(err) !== 'undefined') err.stack.split("\n").compact(true).forEach(function(line) { %>
                    <nobr><%= line %></nobr><br />
                    <% }) %>
                </div>
                
                <div class="text-center" style="padding-top: 50px;">
                    <a href="/" class="btn btn-success">
                        <i class="fa fa-home"></i>
                        Homepage
                    </a>
                </div>
            </div>
        </div>
        
        <div style="position: fixed; width: 100%; bottom: 0px; color: white; padding-bottom: 5px;" class="text-center raleway">
            &copy; Ciusi <%= Date.create().getFullYear() %>
        </div>
        
        <% include ../partials/footer %>
    </body>
</html>
